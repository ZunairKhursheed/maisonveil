{{ 'component-two-column-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.full_width -%}
    .section-{{ section.id }}-padding .two-column-grid__container {
      max-width: none;
      padding-left: 0;
      padding-right: 0;
    }
  {%- endif -%}

  /* Column item styles */
  .section-{{ section.id }}-padding .two-column-grid__item {
    display: flex;
    flex-direction: column;
    position: relative;
  }

  /* Column height styles */
  .section-{{ section.id }}-padding .two-column-grid__item--small {
    min-height: 200px;
  }

  .section-{{ section.id }}-padding .two-column-grid__item--medium {
    min-height: 300px;
  }

  .section-{{ section.id }}-padding .two-column-grid__item--large {
    min-height: 400px;
  }

  .section-{{ section.id }}-padding .two-column-grid__item--adapt {
    min-height: auto;
  }

  .section-{{ section.id }}-padding .two-column-grid__item--screen {
    min-height: 50vh;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .two-column-grid__item--screen {
      min-height: 100vh;
    }
  }

  /* Background image positioning */
  .section-{{ section.id }}-padding .two-column-grid__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .section-{{ section.id }}-padding .two-column-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Overlay styles */
  .section-{{ section.id }}-padding .two-column-grid__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 2;
  }

  /* Text content positioning */
  .section-{{ section.id }}-padding .two-column-grid__text-content {
    position: relative;
    z-index: 3;
    width: 100%;
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Ensure proper spacing for content */
  .section-{{ section.id }}-padding .two-column-grid__text-content > * + * {
    margin-top: 1rem;
  }

  /* Dynamic flexbox positioning */
  .section-{{ section.id }}-padding .two-column-grid__text-content {
    flex-direction: var(--flex-direction, column);
    justify-content: var(--justify-content, center);
    align-items: var(--align-items, center);
  }

  /* Content group styling */
  .section-{{ section.id }}-padding .two-column-grid__content-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    {%- if section.settings.full_width -%}
    <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- else -%}
    <div class="page-width">
      <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- endif -%}
      <div class="two-column-grid__container grid grid--1-col grid--2-col-tablet">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'column' -%}
              <div class="two-column-grid__item grid__item color-{{ block.settings.color_scheme }} two-column-grid__item--{{ block.settings.height }}" 
                   style="--flex-direction: {{ block.settings.flex_direction }}; --justify-content: {{ block.settings.justify_content }}; --align-items: {{ block.settings.align_items }};" 
                   {{ block.shopify_attributes }}>
                {%- if block.settings.background_image != blank -%}
                  <div class="two-column-grid__background">
                    {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                    {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                      (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                    {%- endcapture -%}
                    {{
                      block.settings.background_image
                      | image_url: width: 1500
                      | image_tag: sizes: sizes, widths: widths, class: 'two-column-grid__image'
                    }}
                    {%- if block.settings.show_overlay -%}
                      <div class="two-column-grid__overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};">
                      &nbsp;
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                
                <div class="two-column-grid__text-content" style="text-align: {{ block.settings.text_align }};">
                  {%- if block.settings.group_content and (block.settings.heading != blank or block.settings.text != blank) -%}
                    <div class="two-column-grid__content-group">
                      {%- if block.settings.heading != blank -%}
                        <h2 class="two-column-grid__heading {{ block.settings.heading_size }}">
                          {{ block.settings.heading | escape }}
                        </h2>
                      {%- endif -%}
                      
                      {%- if block.settings.text != blank -%}
                        <div class="two-column-grid__text rte {{ block.settings.text_style }}">
                          {{ block.settings.text }}
                        </div>
                      {%- endif -%}
                    </div>
                  {%- else -%}
                    {%- if block.settings.heading != blank -%}
                      <h2 class="two-column-grid__heading {{ block.settings.heading_size }}">
                        {{ block.settings.heading | escape }}
                      </h2>
                    {%- endif -%}
                    
                    {%- if block.settings.text != blank -%}
                      <div class="two-column-grid__text rte {{ block.settings.text_style }}">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                  
                  {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                    <a
                      href="{{ block.settings.button_link }}"
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- if section.settings.full_width == false -%}
    </div>
  {%- endif -%}
  </div>
</div>

