{{ 'component-two-column-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.full_width -%}
    .section-{{ section.id }}-padding .two-column-grid__container {
      max-width: none;
      padding-left: 0;
      padding-right: 0;
    }
  {%- endif -%}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    {%- if section.settings.full_width -%}
    <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- else -%}
    <div class="page-width">
      <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- endif -%}
      <div class="two-column-grid__container grid grid--1-col grid--2-col-tablet">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'column' -%}
              <div class="two-column-grid__item grid__item" {{ block.shopify_attributes }}>
                <div class="two-column-grid__content">
                  {%- if block.settings.background_image != blank -%}
                    <div class="two-column-grid__background">
                      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                      {%- capture sizes -%}
                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                      {%- endcapture -%}
                      {{
                        block.settings.background_image
                        | image_url: width: 1500
                        | image_tag: sizes: sizes, widths: widths, class: 'two-column-grid__image'
                      }}
                    </div>
                  {%- endif -%}
                  
                  <div class="two-column-grid__text-content">
                    {%- if block.settings.heading != blank -%}
                      <h2 class="two-column-grid__heading {{ block.settings.heading_size }}">
                        {{ block.settings.heading | escape }}
                      </h2>
                    {%- endif -%}
                    
                    {%- if block.settings.text != blank -%}
                      <div class="two-column-grid__text rte {{ block.settings.text_style }}">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                    
                    {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                      <a
                        href="{{ block.settings.button_link }}"
                        class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      >
                        {{ block.settings.button_label | escape }}
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- if section.settings.full_width == false -%}
    </div>
  {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.two-column-grid.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.two_column_grid.settings.layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "t:sections.two_column_grid.settings.full_width"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "t:sections.all.colors.color_scheme_heading"
    },
    {
      "type": "select",
      "id": "section_color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.color_scheme.label"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.two-column-grid.blocks.column.name",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "t:sections.two-column-grid.blocks.column.settings.background_image.label"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "t:sections.two-column-grid.blocks.column.settings.heading.default",
          "label": "t:sections.two-column-grid.blocks.column.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "t:sections.two-column-grid.blocks.column.settings.text.default",
          "label": "t:sections.two-column-grid.blocks.column.settings.text.label"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "t:sections.all.text_style.options__1.label"
            },
            {
              "value": "subtitle",
              "label": "t:sections.all.text_style.options__2.label"
            }
          ],
          "default": "body",
          "label": "t:sections.all.text_style.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "t:sections.two-column-grid.blocks.column.settings.button_label.default",
          "label": "t:sections.two-column-grid.blocks.column.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.two-column-grid.blocks.column.settings.button_link.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "t:sections.two-column-grid.blocks.column.settings.button_style_secondary.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.two-column-grid.presets.name",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %} 