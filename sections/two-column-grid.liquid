{{ 'component-two-column-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.full_width -%}
    .section-{{ section.id }}-padding .two-column-grid__container {
      max-width: none;
      padding-left: 0;
      padding-right: 0;
    }
  {%- endif -%}

  /* Column item styles */
  .section-{{ section.id }}-padding .two-column-grid__item {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Column height styles */
  .section-{{ section.id }}-padding .two-column-grid__content--small {
    min-height: 200px;
  }

  .section-{{ section.id }}-padding .two-column-grid__content--medium {
    min-height: 300px;
  }

  .section-{{ section.id }}-padding .two-column-grid__content--large {
    min-height: 400px;
  }

  .section-{{ section.id }}-padding .two-column-grid__content--adapt {
    min-height: auto;
  }

  /* Make content flex for alignment */
  .section-{{ section.id }}-padding .two-column-grid__content {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Background image positioning */
  .section-{{ section.id }}-padding .two-column-grid__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .section-{{ section.id }}-padding .two-column-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Text content positioning */
  .section-{{ section.id }}-padding .two-column-grid__text-content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* Ensure proper spacing for content */
  .section-{{ section.id }}-padding .two-column-grid__text-content > * + * {
    margin-top: 1rem;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    {%- if section.settings.full_width -%}
    <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- else -%}
    <div class="page-width">
      <div class="two-column-grid{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- endif -%}
      <div class="two-column-grid__container grid grid--1-col grid--2-col-tablet">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'column' -%}
              <div class="two-column-grid__item grid__item color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
                <div class="two-column-grid__content two-column-grid__content--{{ block.settings.height }}" style="justify-content: {{ block.settings.justify_content }}; align-items: {{ block.settings.align_items }};">
                  {%- if block.settings.background_image != blank -%}
                    <div class="two-column-grid__background">
                      {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                      {%- capture sizes -%}
                        (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                        (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                      {%- endcapture -%}
                      {{
                        block.settings.background_image
                        | image_url: width: 1500
                        | image_tag: sizes: sizes, widths: widths, class: 'two-column-grid__image'
                      }}
                    </div>
                  {%- endif -%}
                  
                  <div class="two-column-grid__text-content" style="text-align: {{ block.settings.text_align }};">
                    {%- if block.settings.heading != blank -%}
                      <h2 class="two-column-grid__heading {{ block.settings.heading_size }}">
                        {{ block.settings.heading | escape }}
                      </h2>
                    {%- endif -%}
                    
                    {%- if block.settings.text != blank -%}
                      <div class="two-column-grid__text rte {{ block.settings.text_style }}">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                    
                    {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
                      <a
                        href="{{ block.settings.button_link }}"
                        class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      >
                        {{ block.settings.button_label | escape }}
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- if section.settings.full_width == false -%}
    </div>
  {%- endif -%}
  </div>
</div>

