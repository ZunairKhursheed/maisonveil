{% comment %}
  Book Consultation Form Section
  Allows customers to book consultations through a contact form
{% endcomment %}

{%- liquid
  assign bg_color = section.settings.background_color
  assign text_color = section.settings.text_color
  assign form_bg = section.settings.form_background_color
-%}

{% style %}
  #BookConsultationForm-{{ section.id }} {
    --section-bg: {{ bg_color | default: 'transparent' }};
    --text-color: {{ text_color | default: '#000000' }};
    --form-bg: {{ form_bg | default: '#ffffff' }};
    --input-border: #e0e0e0;
    --input-focus: #007c89;
    --button-bg: {{ section.settings.button_color | default: '#000000' }};
    --button-text: {{ section.settings.button_text_color | default: '#ffffff' }};
  }
{% endstyle %}

<section 
  id="BookConsultationForm-{{ section.id }}" 
  class="consultation-form-section"
  style="background-color: var(--section-bg);"
>
  <div class="page-width">
    <div class="consultation-form__wrapper">
      
      {% if section.settings.heading != blank %}
        <div class="consultation-form__header">
          <h2 class="consultation-form__title">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading != blank %}
            <p class="consultation-form__subtitle">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="consultation-form__container">
        {% if section.settings.description != blank %}
          <div class="consultation-form__description">
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% form 'contact', id: 'BookConsultationForm', class: 'consultation-form' %}
          {% if form.posted_successfully? %}
            <div class="form-status form-status--success" tabindex="-1" autofocus>
              <h3 class="form-status__title">Thank you!</h3>
              <p>We've received your consultation request and will get back to you within 24 hours.</p>
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="form-status form-status--error">
              <h3 class="form-status__title">Please correct the following errors:</h3>
              <ul>
                {% for field in form.errors %}
                  <li>
                    {% if field == 'form' %}
                      {{ form.errors.messages[field] }}
                    {% else %}
                      {{ form.errors.translated_fields[field] | capitalize }} {{ form.errors.messages[field] }}
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <input type="hidden" name="contact[subject]" value="Consultation Request">
          
          <div class="consultation-form__fields">
            <div class="field-group">
              <div class="field field--half">
                <label for="BookConsultationForm-name" class="field__label">
                  Full Name <span class="required">*</span>
                </label>
                <input 
                  type="text" 
                  id="BookConsultationForm-name" 
                  class="field__input" 
                  name="contact[name]" 
                  required
                  autocomplete="name"
                  placeholder="Enter your full name"
                  value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                >
              </div>

              <div class="field field--half">
                <label for="BookConsultationForm-email" class="field__label">
                  Email Address <span class="required">*</span>
                </label>
                <input 
                  type="email" 
                  id="BookConsultationForm-email" 
                  class="field__input" 
                  name="contact[email]" 
                  required
                  autocomplete="email"
                  placeholder="Enter your email address"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                >
              </div>
            </div>

            <div class="field-group">
              <div class="field field--half">
                <label for="BookConsultationForm-phone" class="field__label">
                  Phone Number
                </label>
                <input 
                  type="tel" 
                  id="BookConsultationForm-phone" 
                  class="field__input" 
                  name="contact[phone]"
                  autocomplete="tel"
                  placeholder="Enter your phone number"
                  value="{% if form.phone %}{{ form.phone }}{% endif %}"
                >
              </div>

              <div class="field field--half">
                <label for="BookConsultationForm-service" class="field__label">
                  Service Type
                </label>
                <select id="BookConsultationForm-service" class="field__input" name="contact[service]">
                  <option value="">Select a service</option>
                  {% for service in section.settings.services %}
                    <option value="{{ service }}">{{ service }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>

            <div class="field">
              <label for="BookConsultationForm-preferred-date" class="field__label">
                Preferred Date
              </label>
              <input 
                type="date" 
                id="BookConsultationForm-preferred-date" 
                class="field__input" 
                name="contact[preferred_date]"
                min="{{ 'now' | date: '%Y-%m-%d' }}"
                value="{% if form.preferred_date %}{{ form.preferred_date }}{% endif %}"
              >
            </div>

            <div class="field">
              <label for="BookConsultationForm-message" class="field__label">
                Additional Information
              </label>
              <textarea 
                id="BookConsultationForm-message" 
                class="field__input field__input--textarea" 
                name="contact[body]" 
                rows="6"
                placeholder="Tell us about your style goals, preferences, or any specific questions you have..."
              >{% if form.body %}{{ form.body }}{% endif %}</textarea>
            </div>

            {% if section.settings.show_privacy_notice %}
              <div class="field field--checkbox">
                <label class="field__label field__label--checkbox">
                  <input type="checkbox" required class="field__checkbox">
                  <span class="checkmark"></span>
                  {{ section.settings.privacy_notice_text | default: 'I agree to the Privacy Policy and consent to my data being used to contact me about this consultation.' }}
                </label>
              </div>
            {% endif %}
          </div>

          <div class="consultation-form__button">
            <button type="submit" class="button button--primary">
              {{ section.settings.button_text | default: 'Book Consultation' }}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .consultation-form-section {
    padding: 5rem 0;
    color: var(--text-color);
  }

  .consultation-form__wrapper {
    max-width: 80rem;
    margin: 0 auto;
  }

  .consultation-form__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .consultation-form__title {
    font-size: 3.2rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .consultation-form__subtitle {
    font-size: 1.8rem;
    margin: 0;
    opacity: 0.8;
  }

  .consultation-form__container {
    background-color: var(--form-bg);
    padding: 4rem;
    border-radius: 0.8rem;
    box-shadow: 0 0.4rem 2rem rgba(0, 0, 0, 0.1);
  }

  .consultation-form__description {
    margin-bottom: 3rem;
    font-size: 1.6rem;
    line-height: 1.5;
  }

  .consultation-form__fields {
    margin-bottom: 3rem;
  }

  .field-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .field {
    margin-bottom: 2rem;
  }

  .field--half {
    margin-bottom: 0;
  }

  .field__label {
    display: block;
    margin-bottom: 0.8rem;
    font-weight: 500;
    font-size: 1.4rem;
  }

  .field__label--checkbox {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    font-weight: 400;
    cursor: pointer;
  }

  .field__input {
    width: 100%;
    padding: 1.2rem 1.6rem;
    border: 0.1rem solid var(--input-border);
    border-radius: 0.4rem;
    font-size: 1.6rem;
    transition: border-color 0.2s ease;
    background-color: #ffffff;
  }

  .field__input:focus {
    outline: none;
    border-color: var(--input-focus);
    box-shadow: 0 0 0 0.2rem rgba(0, 124, 137, 0.1);
  }

  .field__input--textarea {
    resize: vertical;
    min-height: 12rem;
  }

  .field__checkbox {
    appearance: none;
    width: 2rem;
    height: 2rem;
    border: 0.2rem solid var(--input-border);
    border-radius: 0.3rem;
    position: relative;
    cursor: pointer;
    flex-shrink: 0;
  }

  .field__checkbox:checked {
    background-color: var(--input-focus);
    border-color: var(--input-focus);
  }

  .field__checkbox:checked::after {
    content: 'âœ“';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .required {
    color: #e74c3c;
  }

  .consultation-form__button {
    text-align: center;
  }

  .button {
    display: inline-block;
    padding: 1.4rem 3rem;
    background-color: var(--button-bg);
    color: var(--button-text);
    border: none;
    border-radius: 0.4rem;
    font-size: 1.6rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    min-width: 20rem;
  }

  .button:hover {
    opacity: 0.9;
    transform: translateY(-0.1rem);
  }

  .form-status {
    padding: 2rem;
    border-radius: 0.4rem;
    margin-bottom: 2rem;
  }

  .form-status--success {
    background-color: #d4edda;
    border: 0.1rem solid #c3e6cb;
    color: #155724;
  }

  .form-status--error {
    background-color: #f8d7da;
    border: 0.1rem solid #f5c6cb;
    color: #721c24;
  }

  .form-status__title {
    margin: 0 0 1rem 0;
    font-size: 1.8rem;
  }

  .form-status ul {
    margin: 0;
    padding-left: 2rem;
  }

  @media screen and (max-width: 768px) {
    .consultation-form-section {
      padding: 3rem 0;
    }

    .consultation-form__container {
      padding: 2rem;
      margin: 0 2rem;
    }

    .consultation-form__title {
      font-size: 2.4rem;
    }

    .consultation-form__subtitle {
      font-size: 1.6rem;
    }

    .field-group {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .field--half {
      margin-bottom: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Book Consultation Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Book a Consultation"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Schedule your personalized consultation with our experts"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Fill out the form below and we'll get back to you within 24 hours to schedule your consultation.</p>"
    },
    {
      "type": "textarea",
      "id": "services",
      "label": "Available Services",
      "info": "Add one service per line",
      "default": "Personal Styling\nWardrobe Consultation\nColor Analysis\nShopping Service\nSpecial Event Styling"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Book Consultation"
    },
    {
      "type": "header",
      "content": "Privacy"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_notice",
      "label": "Show Privacy Notice",
      "default": true
    },
    {
      "type": "richtext",
      "id": "privacy_notice_text",
      "label": "Privacy Notice Text",
      "default": "<p>I agree to the <a href=\"/pages/privacy-policy\">Privacy Policy</a> and consent to my data being used to contact me about this consultation.</p>"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "form_background_color",
      "label": "Form Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Book Consultation Form"
    }
  ]
}
{% endschema %} 